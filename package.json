{
  "name": "@complycloud/brane",
  "version": "0.0.0",
  "description": "Opinionated Node.js microservices framework using event sourcing patterns",
  "main": "src",
  "repository": "https://github.com/complycloud/brane",
  "author": "Sean Bruton <sean@sean.cloud>",
  "license": "MIT",
  "bin": {
    "brane": "src/brane-cli.js"
  },
  "scripts": {
    "check": "yarn lint && yarn test",
    "lint": "eslint src test",
