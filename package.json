    "bunyan": "^1.8.12",
    "chai": "^4.1.1",
    "eslint": "^4.5.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^3.5.0",
    "pre-commit": "^1.2.2",
    "supertest": "^3.0.0"
  },
  "pre-commit": [
    "check"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "dependencies": {
    "ajv": "^5.2.2",
    "debug": "^3.0.1",
    "dependency-graph": "^0.5.0",
    "glob-promise": "^3.2.0",
    "lodash": "^4.17.4",
    "uuid": "^3.1.0",
    "verror": "^1.10.0"
